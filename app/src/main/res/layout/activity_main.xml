<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khoahoang.whatstheweather.MainActivity"
    android:background="@drawable/background"
    android:onClick="processClick">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityInput"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/prompt_str"
        android:id="@+id/cityPrompt"
        android:layout_alignBottom="@+id/cityInput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:textSize="35sp"
        android:textColor="#f8f8f8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_str"
        android:id="@+id/weatherButton"
        android:layout_below="@+id/cityInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:onClick="processClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weatherDisplay"
        android:layout_marginTop="62dp"
        android:textColor="#f8f7f7"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:textAlignment="center"
        android:layout_below="@+id/weatherButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
